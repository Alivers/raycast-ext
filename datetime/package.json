{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "datetime",
  "title": "DateTime Converter",
  "description": "Convert timestamps and datetime strings into various formats.",
  "icon": "timestamp-icon.png",
  "author": "yangxy",
  "contributors": [
    "yifengkuaijian",
    "pernielsentikaer",
    "hemang_kinra",
    "jose-elias-alvarez",
    "bestemic",
    "alivers"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Format Date",
      "description": "Convert timestamps and datetime strings into various formats.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "isoDate",
      "title": "Select Preferred Date Time Formats",
      "type": "checkbox",
      "required": false,
      "label": "YYYY-MM-DD",
      "description": "2024-11-01",
      "default": true
    },
    {
      "name": "isoDateTime",
      "type": "checkbox",
      "required": false,
      "label": "YYYY-MM-DD HH:mm:ss",
      "description": "2024-11-01 01:56:27",
      "default": true
    },
    {
      "name": "formatWithMillis",
      "type": "checkbox",
      "required": false,
      "label": "YYYY-MM-DD HH:mm:ss.SSS",
      "description": "2024-11-01 01:56:27.000",
      "default": true
    },
    {
      "name": "formatWithTimezone",
      "type": "checkbox",
      "required": false,
      "label": "YYYY-MM-DD HH:mm:ssZ",
      "description": "2024-11-01 01:56:27+05:30",
      "default": true
    },
    {
      "name": "isoFormat",
      "type": "checkbox",
      "required": false,
      "label": "ISO 8601 (default)",
      "description": "2024-11-01T01:56:27+05:30",
      "default": true
    },
    {
      "name": "utcIsoFormat",
      "type": "checkbox",
      "required": false,
      "label": "UTC ISO 8601",
      "description": "2024-10-31T20:26:27Z",
      "default": true
    },
    {
      "name": "unixTimestamp",
      "type": "checkbox",
      "required": false,
      "label": "Unix Timestamp (seconds)",
      "description": "1730406387",
      "default": true
    },
    {
      "name": "unixMillis",
      "type": "checkbox",
      "required": false,
      "label": "Unix Timestamp (milliseconds)",
      "description": "1730406387000",
      "default": true
    },
    {
      "name": "localizedShortDate",
      "type": "checkbox",
      "required": false,
      "label": "Localized (L)",
      "description": "11/01/2024",
      "default": true
    },
    {
      "name": "localizedShortDateTime",
      "type": "checkbox",
      "required": false,
      "label": "Localized (L LT)",
      "description": "11/01/2024 1:56 AM",
      "default": true
    },
    {
      "name": "localizedFullDateTime",
      "type": "checkbox",
      "required": false,
      "label": "Localized (LLL)",
      "description": "November 1, 2024 1:56 AM",
      "default": true
    },
    {
      "name": "localizedLongDateTime",
      "type": "checkbox",
      "required": false,
      "label": "Localized (LLLL)",
      "description": "Friday, November 1, 2024 1:56 AM",
      "default": true
    },
    {
      "name": "localizedTime",
      "type": "checkbox",
      "required": false,
      "label": "Localized Time (LT)",
      "description": "1:56 AMâ€Ž",
      "default": true
    },
    {
      "name": "localizedSecondsTime",
      "type": "checkbox",
      "required": false,
      "label": "Localized Time with Seconds (LTS)",
      "description": "1:56:27 AM",
      "default": true
    },
    {
      "name": "naturalLanguageDateFormat",
      "title": "Default Natural Language Date Format",
      "type": "textfield",
      "default": "YYYY-MM-DD",
      "description": "Default date format string to use when converting natural language dates.",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "1.98.2",
    "@raycast/utils": "^1.19.1",
    "chrono-node": "^2.8.0",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.4",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-devtools": "6.1.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
